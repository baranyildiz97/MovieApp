@model IEnumerable<Category>

    <div class="list-group">
        
        @foreach (var item in Model)
        {
        <a 
           asp-controller="Movie" asp-action="Index" asp-route-id="@item.CategoryId"
           
           
           
           class="list-group-item @(ViewBag.SelectedCategory == item.CategoryId.ToString()?"active":"") " style="font-weight:bold">
            @item.Name
        </a>
        }




        
        

    </div>
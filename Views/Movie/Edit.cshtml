@model MovieApp.Entity.Movie
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}


<div class="container">

    <br />


    <form asp-controller="Movie" asp-action="Edit" method="post" enctype="multipart/form-data">


        <input type="hidden" asp-for="MovieId" />
        <input type="hidden" asp-for="Image" />


        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="MovieDate">Vision Date</label>
            <textarea asp-for="MovieDate" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/images/@Model.Image" width="120" />
            <input type="file" name="file" id="file" class="form-control" />
        </div>

        <div class="form-group">
            <img src="~/videos/@Model.Video" width="120" />
            <input type="file" name="file" id="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="VideoUrl">Video Url</label>
            <textarea asp-for="VideoUrl" class="form-control"></textarea>
        </div>

        <div class="form-group form-check">
            <input asp-for="isHome" class="form-check-input">
            <label class="form-check-label">isHome</label>
        </div>






        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="javascript:history.back()" class="btn btn-primary">Go Back</a>

    </form>

</div>








@model MovieApp.Entity.Movie
@{
    ViewData["Title"] = "Details";
}


<div class="container mt-3">
    <div class="row">
        <div class="col-md-3 mt-3">
            @await Component.InvokeAsync("CategoryMenu")
        </div>
        <div class="col-md-9">
            <div class="container mt-3">
                <div class="card mb-2 shadow-sm">

                    <img src="~/images/@Model.Image" style="width:100%; height:100%; border-radius:2px" alt="@Model.Title" />
                    <div class="card-body">



                        <h6 style="float:right">@Model.MovieDate</h6>
                        <h4 class="card-text">@Model.Title</h4>
                        
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Html.Raw(Model.Body)</p>
                        <p style="font-weight:bold">Category : @Model.Category.Name</p>

                        
                    
                     
                        

                        <iframe width="640" height="360" src="@Model.VideoUrl">
                        </iframe>
                        



                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">


                                <a href="javascript:history.back()" class="btn btn-primary">Go Back</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>


</div>